    private void jComProductoActionPerformed(java.awt.event.ActionEvent evt) {                                             
       calcularPrecio();
    }                                            

    private void jSpinCantStateChanged(javax.swing.event.ChangeEvent evt) {                                       
        calcularPrecio();
    }                                      

    private void jButtonAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                               
        Ventas Venta= new Ventas();
        Venta.setId(jComProducto.getSelectedIndex());
        Venta.setDescripcion(jComProducto.getSelectedItem().toString());
        Venta.setPrecio(precio);
        Venta.setCantidad(cantidad);
        Venta.setImporte(precio*cantidad);
        if(!buscarVenta(Venta)){
        listaVentas.add(Venta);
       
        }
       actualizarTabla();
        borrarVenta();
    }                                              

    public boolean buscarVenta(Ventas nueva){
      for (Ventas v : listaVentas)  
          if (v.getId()==nueva.getId()){
              int nuevaCantidad=v.getCantidad()+nueva.getCantidad();
              v.setCantidad(nuevaCantidad);
              v.setImporte(v.getPrecio()*nuevaCantidad);
              return true;
          }
    
    return false;
    }
    public void borrarVenta(){
        precio=0;
        cantidad=1;
        jComProducto.setSelectedIndex(0);
        jSpinCant.setValue(1);
        calcularPrecio();
    }
    public void calcularPrecio() {
        precio=precios[jComProducto.getSelectedIndex()];
        cantidad=Integer.parseInt(jSpinCant.getValue().toString());
        jLblPrecio.setText(aMoneda(precio));
        jLblImport.setText(aMoneda(precio*cantidad));
        
    }
    public String aMoneda(double precio){
        return "$ "+ Math.round(precio*100.0)/100.0+ "MXN";
    }
    public void actualizarTabla(){
        while(modelo.getRowCount()>0){
            modelo.removeRow(0);
        }
        double subtotal=0;
        for (Ventas v : listaVentas){
        Object x[]=new Object[4];
        x[0]=v.getDescripcion();
        x[1]=aMoneda(v.getPrecio());
        x[2]=v.getCantidad();
        x[3]=aMoneda(v.getImporte());
        modelo.addRow(x);
        subtotal+=v.getImporte();
       }
        double iva=subtotal*.16;
        double total=subtotal+iva;
        jLlbSubtotal.setText(aMoneda(subtotal));
        jLlbIva.setText(aMoneda(iva));
        jLlbTotal.setText(aMoneda(total));
        jTableProducto.setModel(modelo);
        
    }
    
